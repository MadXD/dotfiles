#!/usr/bin/env python
# -*- coding: utf-8 -*-

import subprocess

BREW_PACKAGES = [
    'carthage',
    'imagemagick',
]

GEMS = [
    'cocoapods',
    'deliver',
    'fastlane',
    'nomad-cli',
    'shenzhen',
    'snapshot',
]

for pkg in BREW_PACKAGES:
    subprocess.check_call(['brew', 'install', pkg])

for gem in GEMS:
    subprocess.check_call(['gem', 'install', gem])
