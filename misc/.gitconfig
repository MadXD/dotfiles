[alias]
	addw = !sh -c 'git diff -w --no-color "$@" | git apply --cached --ignore-whitespace' -
	br = branch
	bra = branch -a
	ca = !git commit -a --amend --no-edit
	cap = !git commit -a --amend --no-edit && git push --force
	cl = clean -dfq
	co = checkout
	lg = log --decorate --oneline
	purr = pull --rebase
	rc = !git reset HEAD --hard && git clean -dfq
	rcg = !git reset HEAD --hard && git clean -dfx && git gc --aggressive --prune=all
	st = status -sb
	sti = status -sb --ignored
	tv = !git tag -f -a \"v$@\" -m \"v$@\"
[color]
	ui = auto
[core]
	whitespace = trailing-space,space-before-tab
[merge]
	tool = meld
[user]
	email = lorenzo@villani.me
	name = Lorenzo Villani
[push]
	default = simple
